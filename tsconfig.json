{
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": true,
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "jsxImportSource": "ripple",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true, 
    "types": ["node"],
    "skipLibCheck": true
  }
}
