{
  "name": "ripple-file-router",
  "version": "0.0.11",
  "description": "A minimal, lightweight SPA router system designed for RippleJS. Automatically generates routes from your .ripple pages, supports nested directories, includes global router loader and persistent state manager.",
  "keywords": [
    "ripple",
    "router",
    "spa",
    "store",
    "routing",
    "tools",
    "tooling"
  ],
  "bin": {
    "ripple-file-router init": "./cli.js"
  },
  "homepage": "https://github.com/emeraldlinks/ripple-file-router#readme",
  "bugs": {
    "url": "https://github.com/emeraldlinks/ripple-file-router/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emeraldlinks/ripple-file-router.git"
  },
  "license": "MIT",
  "author": "Joseph Christopher",
  "type": "module",
  "main": "./dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "cli.js",
    "ReadMe.md",
    "dist",
    "vite-plugin-ripple.d.ts",
    "src/pages",
    "src/App.ripple",
    "src/App2.ripple",
    "src/routes.ts"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "ripple": "^0.2.109",
    "vite": "^7.1.6",
    "vite-plugin-ripple": "^0.2.56"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "typescript": "^5.6.2"
  }
}
